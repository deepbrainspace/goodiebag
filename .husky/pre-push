# Check lockfile sync before pushing
echo "ğŸ” Testing frozen lockfile check..."
pnpm install --frozen-lockfile --ignore-scripts 2>&1 | head -10
EXIT_CODE=$?
echo "Exit code: $EXIT_CODE"

if [ $EXIT_CODE -ne 0 ]; then
  echo "âŒ Lockfile is out of sync!"
  echo "ğŸ”§ Please run 'pnpm install' to update lockfiles and commit the changes"
  echo "ğŸ“ Then try pushing again"
  exit 1
fi

echo "âœ… Lockfile check passed"