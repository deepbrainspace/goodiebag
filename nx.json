{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e",
          "check",
          "package"
        ]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/nx.json"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "test"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "dependsOn": ["lint"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default"],
      "cache": true
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "dist/packages/{projectName}"
      },
      "env": {
        "NPM_TOKEN": "{env.NPM_TOKEN}"
      }
    },
    "check": {
      "inputs": ["default"],
      "cache": true
    },
    "package": {
      "dependsOn": ["build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "clean": {
      "inputs": ["default"],
      "cache": false
    },
    "publish": {
      "dependsOn": ["package"],
      "cache": false
    },
    "publish-dry-run": {
      "dependsOn": ["package"],
      "cache": true
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "generators": {
    "@nx/plugin": {
      "plugin": {
        "linter": "eslint"
      }
    }
  },
  "parallel": 5,
  "release": {
    "projectsRelationship": "independent",
    "git": {
      "commit": true,
      "tag": true,
      "push": true
    },
    "version": {
      "conventionalCommits": {
        "types": {
          "docs": {
            "semverBump": "patch",
            "changelog": {
              "title": "ðŸ“– Documentation",
              "hidden": false
            }
          }
        }
      },
      "fallbackCurrentVersionResolver": "disk",
      "updateDependents": "never"
    },
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": true,
      "workspaceChangelog": false
    },
    "groups": {
      "workspace": {
        "projects": ["goodiebag"],
        "changelog": {
          "automaticFromRef": true,
          "file": "{workspaceRoot}/CHANGELOG.md"
        },
        "publish": {
          "registry": "https://registry.npmjs.org/"
        }
      },
      "nx-plugins": {
        "projects": ["nx-*"],
        "changelog": {
          "automaticFromRef": true,
          "projectChangelogs": {
            "createRelease": "github",
            "file": true
          }
        },
        "publish": {
          "registry": "https://registry.npmjs.org/"
        }
      },
      "rust-packages": {
        "projects": ["claude-code-toolkit"],
        "version": {
          "conventionalCommits": {
            "types": {
              "docs": {
                "semverBump": "patch",
                "changelog": {
                  "title": "ðŸ“– Documentation",
                  "hidden": false
                }
              }
            }
          },
          "versionActions": "@goodiebag/nx-rust/release"
        },
        "changelog": {
          "automaticFromRef": true,
          "projectChangelogs": {
            "createRelease": "github",
            "file": true
          }
        },
        "publish": {
          "options": {
            "packageRoot": "packages/{projectName}"
          }
        }
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "jest:test"
      }
    },
    {
      "plugin": "@goodiebag/nx-rust",
      "exclude": ["goodiebag", "nx-*"]
    }
  ]
}
