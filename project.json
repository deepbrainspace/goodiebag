{
  "name": "goodiebag",
  "projectType": "library",
  "sourceRoot": ".",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --check .github/**/*.{yml,yaml} *.md docs/**/*.md || echo 'â„¹ï¸  Some workspace files could benefit from formatting'"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'ğŸ§ª Testing workspace configuration...'",
          "nx graph --file=temp-graph.json > /dev/null && rm -f temp-graph.json",
          "echo 'âœ… Workspace configuration is valid'"
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'ğŸ—ï¸  Building workspace documentation...'",
          "mkdir -p dist/workspace",
          "nx graph --file=dist/workspace/dependency-graph.json",
          "echo 'âœ… Workspace build completed'"
        ]
      },
      "outputs": ["{workspaceRoot}/dist/workspace"]
    }
  },
  "implicitDependencies": [],
  "tags": ["workspace", "infrastructure"]
}