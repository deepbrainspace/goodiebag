{
  "name": "nx-surrealdb",
  "sourceRoot": "packages/nx-surrealdb/src",
  "projectType": "library",
  "tags": [
    "type:nx-plugin",
    "lang:typescript",
    "domain:database",
    "scope:publishable",
    "runtime:node"
  ],
  "targets": {
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write src/**/*.{ts,js,json}",
        "cwd": "{projectRoot}"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "outputs": [],
      "cache": false,
      "options": {
        "commands": [
          {
            "command": "pnpm install --frozen-lockfile",
            "forwardAllArgs": false
          }
        ],
        "cwd": "packages/nx-surrealdb",
        "parallel": false
      }
    },
    "build-ts": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["install"],
      "cache": false,
      "options": {
        "outputPath": "{workspaceRoot}/packages/nx-surrealdb/dist",
        "main": "{workspaceRoot}/packages/nx-surrealdb/src/index.ts",
        "tsConfig": "{workspaceRoot}/packages/nx-surrealdb/tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/nx-surrealdb",
            "glob": "{package.json,generators.json,executors.json,README.md,LICENSE.md,ARCHITECTURE.md}",
            "output": "./"
          },
          {
            "input": "packages/nx-surrealdb/src",
            "glob": "**/schema.json",
            "output": "src"
          },
          {
            "input": "packages/nx-surrealdb/src/schema",
            "glob": "**/*",
            "output": "src/schema"
          }
        ]
      },
      "configurations": {
        "production": {}
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-ts"],
      "options": {
        "commands": [
          {
            "command": "cp README.md ARCHITECTURE.md executors.json generators.json package.json pnpm-lock.yaml dist/",
            "forwardAllArgs": false
          },
          {
            "command": "cp -r src/generators/init/files dist/src/generators/init/",
            "forwardAllArgs": false
          },
          {
            "command": "cp -r src/generators/migration/files dist/src/generators/migration/",
            "forwardAllArgs": false
          }
        ],
        "cwd": "packages/nx-surrealdb",
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "dependsOn": ["format"],
      "options": {
        "lintFilePatterns": [
          "packages/nx-surrealdb/src/**/*.ts",
          "packages/nx-surrealdb/src/**/*.js"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["install"],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "cache": false,
      "options": {
        "commands": [
          {
            "command": "npx jest --config=jest.config.js",
            "forwardAllArgs": false
          }
        ],
        "cwd": "packages/nx-surrealdb",
        "parallel": false
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx release version --projects=nx-surrealdb",
        "cwd": "{workspaceRoot}"
      }
    },
    "changelog": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx release changelog --projects=nx-surrealdb",
        "cwd": "{workspaceRoot}"
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx release version --projects=nx-surrealdb",
          "nx release changelog --projects=nx-surrealdb",
          "nx release publish --projects=nx-surrealdb"
        ],
        "cwd": "{workspaceRoot}",
        "parallel": false
      }
    }
  }
}
