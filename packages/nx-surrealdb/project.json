{
  "name": "nx-surrealdb",
  "sourceRoot": "packages/nx-surrealdb/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "cache": false,
      "options": {
        "outputPath": "packages/nx-surrealdb/dist",
        "main": "packages/nx-surrealdb/src/index.ts",
        "tsConfig": "packages/nx-surrealdb/tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/nx-surrealdb/src/generators/migration/files",
            "glob": "**/*",
            "output": "src/generators/migration/files"
          },
          {
            "input": "packages/nx-surrealdb/src/generators/init/files",
            "glob": "**/*",
            "output": "src/generators/init/files"
          },
          {
            "input": "packages/nx-surrealdb",
            "glob": "{package.json,generators.json,executors.json,README.md,LICENSE.md,ARCHITECTURE.md}",
            "output": "./"
          },
          {
            "input": "packages/nx-surrealdb/src",
            "glob": "**/*/schema.json",
            "output": "src"
          },
          {
            "input": "packages/nx-surrealdb/src/schema",
            "glob": "**/*",
            "output": "src/schema"
          }
        ]
      },
      "configurations": {
        "production": {}
      }
    },
    "copy-schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p packages/nx-surrealdb/dist/src/schema && cp packages/nx-surrealdb/src/schema/system_migrations.surql packages/nx-surrealdb/dist/src/schema/"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "cache": false,
      "options": {
        "jestConfig": "packages/nx-surrealdb/jest.config.ts"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "cd packages/nx-surrealdb && pnpm publish"
      }
    }
  }
}