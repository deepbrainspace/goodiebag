{
  "name": "nx-surrealdb",
  "sourceRoot": "packages/nx-surrealdb/src",
  "projectType": "library",
  "tags": [
    "type:nx-plugin",
    "lang:typescript",
    "domain:database",
    "scope:publishable",
    "runtime:node"
  ],
  "targets": {
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write src/**/*.{ts,js,json}",
        "cwd": "{projectRoot}"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "outputs": [],
      "cache": true,
      "options": {
        "commands": [
          {
            "command": "pnpm install --frozen-lockfile",
            "forwardAllArgs": false
          }
        ],
        "cwd": "packages/nx-surrealdb",
        "parallel": false
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["install"],
      "cache": true,
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.json",
          "{projectRoot}/*.md",
          {
            "input": "{projectRoot}/src",
            "glob": "**/schema.json",
            "output": "src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/files/**",
            "output": "src"
          },
          {
            "input": "{projectRoot}/src",
            "glob": "**/*.surql",
            "output": "src"
          }
        ]
      },
      "configurations": {
        "production": {}
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.ts",
          "{projectRoot}/src/**/*.js"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["install"],
      "outputs": ["{projectRoot}/coverage"],
      "cache": false,
      "options": {
        "commands": [
          {
            "command": "npx jest --config=jest.config.js",
            "forwardAllArgs": false
          }
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx release version --projects={projectName}",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
