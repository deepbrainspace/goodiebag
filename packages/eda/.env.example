# EDA Environment Variables (copy to .env and fill in your values)

# === Deployment Mode ===
EDA_MODE=local  # local, remote, or hybrid

# === SurrealDB Configuration ===
SURREALDB_URL=file:eda.db  # or ws://localhost:8000 for server mode
SURREALDB_USER=root
SURREALDB_PASS=root
SURREALDB_NS=eda
SURREALDB_DB=memory

# === API Keys ===
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# === Remote Server (for remote/hybrid modes) ===
EDA_REMOTE_SERVER_URL=https://eda-api.your-domain.com
EDA_REMOTE_API_KEY=your-eda-api-key

# === Paths ===
CLAUDE_PROJECTS_PATH=~/.claude/projects

# === Logging ===
RUST_LOG=eda=info